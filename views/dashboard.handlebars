{{#if post.length}}
<section class="card">
    <div class="card-header">Your Posts</div>
    <div class="post-body">
        <ul class="post-list">
            {{#each post}}
            <a href="/dashboard/edit/{{id}}">
                <li class="post-list-item" >
                    <div>{{title}}</div>
                    <div>Posted on {{format_date created_at}}</div>
                </li>
            </a>
            {{/each}}
        </ul>
    </div>
</section>
{{/if}}

<section class="card hide" id="create-post-card">
    <div class="card-header">Create New Post</div>
    <div class="card-body">
        <form class="new-post-form">
            <div>
                <label for="post-title" class="form-label">Title</label>
                <input placeholder="Enter Title Here"  class="form-input" id="post-title" type="text" name="post-title"/>
            </div>
            <div>
                <label for="post-content" class="form-label">Post Message</label>
                <textarea placeholder="Enter Message Here" class="form-textarea" id="post-content" name="post-content"></textarea>
            </div>
            <button type="submit" class="btn">Submit Post</button>
        </form>
    </div>

</section>
<div class="center">
    <button id="add-post-btn">Create New Post</button> 
</div>

<script src="/javascript/add-post.js"></script> 